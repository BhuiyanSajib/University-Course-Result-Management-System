@{
    ViewBag.Title = "SaveDepartment";
}


<!DOCTYPE html>
<html>
<head>
    <title>Save Department</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
    <style>
        label.error {
            color: red;
        }
          #home-bar {
            height: 60px;
            width: 100%;
            background-color: darkcyan;
        }
    </style>
</head>
<body>
<div id="home-bar">
    <h3 class="text-center" style="padding-top: 15px"><a onclick=" window.location.href = '@Url.Action("Index", "Home")' " style="color: wheat" >Home</a></h3>
</div>
<div class="container container-fluid">
    <h3 class="text-center"><strong>Save Department</strong>
    </h3>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">

            <form method="POST" class="form-horizontal" id="saveDepartment">
                <div class="form-group">
                    <label for="Name">Department Name</label>
                    <input type="text" class="form-control" name="Name" id="Name"/>
                </div>
                <div class="form-group">
                    <label for="Code">Department Code</label>
                    <input type="text" class="form-control" name="Code" id="Code"/>
                </div>
                <div class="form-group" style="padding-left: 510px">

                    <input type="submit" class="btn btn-success btn-lg" value="Save"/>
                </div>
                <label id="messageLabel">@ViewBag.Message</label>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.1.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(document).ready(function() {
        $("#saveDepartment").validate({
            rules: {
                Name: "required",
                Code: {
                    required: true,
                    minlength: 2,
                    maxlength: 7
                }
            },
            messages: {
                Name: "Please Enter Department Name",
                Code: {
                    required: "Please Enter Department Name",
                    minlength: "Code length must be 2 to 7 characters",
                    maxlangth: "Code length must be 2 to 7 characters"
                }
            }
        });
    });

</script>
</body>
    </html>
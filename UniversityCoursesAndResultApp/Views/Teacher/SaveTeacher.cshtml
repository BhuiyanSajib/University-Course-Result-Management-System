@using UniversityCoursesAndResultApp.Models
@{
    ViewBag.Title = "SaveTeacher";
    var departments = ViewBag.Departments;
    var designations = ViewBag.Designation;
}

<!Doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Save Teacher</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
    <style>
        label.error {
            color: red;
        }
         #home-bar {
            height: 60px;
            width: 100%;
            background-color: darkcyan;
        }
    </style>
</head>
<body>
<div id="home-bar">
    <h3 class="text-center" style="padding-top: 15px"><a onclick=" window.location.href = '@Url.Action("Index", "Home")' " style="color: wheat" >Home</a></h3>
</div>
<div class="container container-fluid">
    <h3 class="text-center">Save Teacher</h3><hr/>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form class="form-horizontal" method="post" id="saveTeacher">
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="teacherName" name="Name" placeholder="Name"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address" class="col-sm-2 control-label">Address</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" id="address" name="Address" placeholder="Address"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="teacherEmail" name="Email" placeholder="Email"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="contact" class="col-sm-2 control-label">Contact No</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="contactNum" name="ContactNo" placeholder="Contact No"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="designation" class="col-sm-2 control-label">Designation</label>
                    <div class="col-sm-10">
                        <select id="designationList"style="height: 35px; width: 100%" name="DesignationId">
                            <option value="">....Select Designation....</option>
                            @foreach (Designation designation in designations)
                            {
                                <option value="@designation.Id">@designation.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="department" class="col-sm-2 control-label">Department</label>
                    <div class="col-sm-10">
                        <select id="departmentList" style="height: 35px; width: 100%" name="DepartmentId">
                            <option value="">...........Select Department........</option>
                            @foreach (Department department in departments)
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="credit" class="col-sm-2 control-label">Credit to be taken</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="creditTaken" name="CreditTaken" placeholder="Credit to be taken"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" id="saveButton">Save</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <label class="text-danger">@ViewBag.ErrorMessage</label>
                        <label class="text-success">@ViewBag.SuccessMessage</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.1.0.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script>
    $(document).ready(function() {
        $("#saveTeacher").validate({
            rules: {
                Name: "required",
                Address: "required",
                Email: "required",
                ContactNo: "required",
                CreditTaken: "required",
                DepartmentId: "required",
                DesignationId: "required",

                messages: {
                    Name: "Please Enter Name",
                    Address: "Please Enter Address",

                    Email: "Please Enter Email",
                    ContactNo: "Please Enter Contact Number",
                    CreditTaken: "Please Enter credit to be taken",
                    DepartmentId: "Please Select a depertment",
                    DesignationId: "Please Select a semester"

                }
            }
        });
    });
</script>

</body>
</html>
